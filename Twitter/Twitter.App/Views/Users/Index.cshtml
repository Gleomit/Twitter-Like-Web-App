@model IEnumerable<Twitter.App.Models.ViewModels.Tweet.TweetViewModel>
<div class="col-lg-4"></div>

<div class="col-lg-8 ">
    <div class="row">
        <div class="well">
            @using (Ajax.BeginForm("Tweet", "Tweets", null, new AjaxOptions()
            {
                HttpMethod = "POST",
                UpdateTargetId = "userHomeTweetsContainer",
                InsertionMode = InsertionMode.InsertBefore
            }, new {@class = "col-lg-12"}))
            {
                @Html.AntiForgeryToken()
                @Html.TextArea("content", new { @class = "form-control", placeholder = "Type in your message", rows = "5"})
                <input type="submit" value="Tweet" class="btn btn-info form-control"/>
            }
        </div>
    </div>
    <div id="userHomeTweetsContainer">
        @{
            Html.RenderPartial("~/Views/Tweets/_TweetsPartial.cshtml", Model);
        }
    </div>
</div>