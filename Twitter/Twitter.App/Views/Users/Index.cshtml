@model IEnumerable<Twitter.App.Models.ViewModels.Tweet.TweetViewModel>
<div class="row">
    <div class="well">
        @using (Html.BeginForm("Tweet", "Tweets", null, FormMethod.Post, new {@class = "col-lg-12"}))
        {
            @Html.TextArea("content", new {@class = "form-control", placeholder = "Type in your message", rows = "5"})
            <input type="submit" value="Tweet" class="btn btn-info form-control"/>
        }
    </div>
</div>


@foreach (var tweet in Model)
{
    Html.RenderPartial("~/Views/Tweets/_TweetsPartial.cshtml", tweet);
}
